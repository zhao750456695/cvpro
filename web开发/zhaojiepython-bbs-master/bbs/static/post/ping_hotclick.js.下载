function hotclick(a){this.t=a}hotclick.prototype={sendHeat:function(f,e){var d=[];var b,c,a;d.push("&x="+f.x);d.push("&y="+f.y);var b=this.t.url.join("")+d.join("");c=this.t.getParameter("r2",b);a=this.t.getParameter("r3",b);b=b.replace("r2="+c,"r2=h"+c.replace(/a|h/g,""));b=b.replace("r3="+a,"r3="+Math.max(document.body.scrollHeight,document.documentElement.scrollHeight));this.t.sendInfo(b)},linkHeat:function(f){try{var h=true,d="",a;a=window.event?window.event.srcElement:f.target;switch(a.tagName){case"A":d="<A href="+a.href+">"+a.innerHTML+"</a>";break;case"IMG":d="<IMG src="+a.src+">";break;case"INPUT":d="<INPUT type="+a.type+" value="+a.value+">";break;case"BUTTON":d="<BUTTON>"+a.innerText+"</BUTTON>";break;case"SELECT":d="SELECT";break;default:h=false;break}if(h){var g=this.getElementPos(a);if(_params.coordinateId){var b=t.getElementPos(document.getElementById(_params.coordinateId));g.x-=b.x}this.sendHeat(g,d)}}catch(c){}},clickHeat:function(d){try{var c=d||window.event;var g={};if(c.pageX||c.pageY){g={x:c.pageX,y:c.pageY}}else{g={x:c.clientX+Math.max(document.documentElement.scrollLeft,document.body.scrollLeft)-document.body.clientLeft,y:c.clientY+Math.max(document.documentElement.scrollTop,document.body.scrollTop)-document.body.clientTop}}var f=Math.max(Math.max(document.body.clientWidth,document.body.offsetWidth),Math.max(document.body.scrollWidth,document.documentElement.scrollWidth))/2;var b=window.screen.width/2;g.x=g.x-f+b-(Math.max(document.body.scrollHeight,document.documentElement.scrollHeight)>(typeof(window.innerHeight)=="undefined"?document.documentElement.clientHeight:window.innerHeight)?8.5:0);this.sendHeat(g)}catch(a){}},watchClick:function(a){this.clickHeat(a)},getElementPos:function(c){if(c.parentNode===null||c.style.display=="none"){return false}var a=navigator.userAgent.toLowerCase(),k=null,j=[],g;if(c.getBoundingClientRect){var b,d,f,h;g=c.getBoundingClientRect();b=Math.max(document.documentElement.scrollTop,document.body.scrollTop);d=Math.max(document.documentElement.scrollLeft,document.body.scrollLeft);f=document.body.clientTop;h=document.body.clientLeft;return{x:g.left+d-h,y:g.top+b-f}}else{if(document.getBoxObjectFor){g=document.getBoxObjectFor(c);var i=(c.style.borderLeftWidth)?Math.floor(c.style.borderLeftWidth):0;var e=(c.style.borderTopWidth)?Math.floor(c.style.borderTopWidth):0;j=[g.x-i,g.y-e]}else{j=[c.offsetLeft,c.offsetTop];k=c.offsetParent;if(k!=c){while(k){j[0]+=k.offsetLeft;j[1]+=k.offsetTop;k=k.offsetParent}}if(a.indexOf("opera")>-1||(a.indexOf("safari")>-1&&c.style.position=="absolute")){j[0]-=document.body.offsetLeft;j[1]-=document.body.offsetTop}}}if(c.parentNode){k=c.parentNode}else{k=null}while(k&&k.tagName!="BODY"&&k.tagName!="HTML"){j[0]-=k.scrollLeft;j[1]-=k.scrollTop;if(k.parentNode){k=k.parentNode}else{k=null}}return{x:j[0],y:j[1]}}};